## http://stackoverflow.com/a/2154277

recurse() {
 local i
 for i in "$1"/*;do
    if [ -d "$i" ];then
        #echo "dir: $i"
        recurse "$i"
    elif [ -f "$i" ]; then
        echo "$i"
    fi
 done
}

## XXX: hardcoded path
recurse "$HOME/derivative-maker"
