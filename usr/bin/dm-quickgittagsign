#!/bin/bash

## Copyright (C) 2025 - 2025 ENCRYPTED SUPPORT LLC <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x

commit="$(git rev-parse --verify HEAD)"
tag="adrelanos_${commit}"
git tag -s "$tag" -m .

for remote_name in adrelanos github-kicksecure gitlab-kicksecure github-whonix gitlab-whonix ; do
  if &>/dev/null git remote get-url "$remote_name" ; then
    git push "$remote_name" "$tag" &
    pid_list+=" $!"
  fi
done

wait -- $pid_list
