#!/bin/bash

## Copyright (C) 2012 - 2022 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

## disable cmd line parser, since not needed
export dist_build_one_parsed="1"
export VMNAME="internalrun"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
mydir_backup="$MYDIR"
cd "$MYDIR"

source ~/derivative-maker/help-steps/pre
source ~/derivative-maker/help-steps/colors
source ~/derivative-maker/help-steps/variables

cd "$mydir_backup"

for derivative_name_item in $derivative_name_list ; do
   export derivative_name_item

   #../debug-steps/reprepro-wrapper copymatched buster buster-proposed-updates "*"
   ../debug-steps/reprepro-wrapper copymatched bullseye bullseye-proposed-updates "*"

   true "${cyan}INFO: Done. Migrated proposed-updates repository to stable repository. Do not forget to upload it.${reset}"
done
